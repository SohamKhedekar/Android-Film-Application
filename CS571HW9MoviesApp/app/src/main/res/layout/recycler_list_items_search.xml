<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@color/gray">
        <ImageView
            android:id="@+id/search_card_img"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            android:foreground="@drawable/scroll_view_gradient"/>
        <TextView
            android:id="@+id/search_card_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:shadowColor="@color/black"
            android:shadowRadius="1.5"
            android:shadowDx="3"
            android:shadowDy="3"/>
        <ImageView
            android:id="@+id/search_card_rating_star"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_baseline_star_rate_24"
            android:layout_gravity="right"
            android:layout_marginTop="17dp"
            android:layout_marginRight="36dp"/>
        <TextView
            android:id="@+id/search_card_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:textStyle="bold"
            android:shadowColor="@color/black"
            android:shadowRadius="1.5"
            android:shadowDx="3"
            android:shadowDy="3"/>
        <TextView
            android:id="@+id/search_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="sans-serif-smallcaps"
            android:textStyle="bold"
            android:textSize="18dp"
            android:shadowColor="@color/black"
            android:shadowRadius="1.5"
            android:shadowDx="3"
            android:shadowDy="3"/>

    </androidx.cardview.widget.CardView>

</RelativeLayout>