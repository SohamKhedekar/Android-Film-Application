<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@color/gray"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        android:outlineSpotShadowColor="@color/blue">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/review_card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:textSize="18dp"
                android:paddingTop="5dp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/review_card_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textSize="14dp"/>
                <ImageView
                    android:id="@+id/review_rating_star"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_star_rate_24"
                    android:layout_toRightOf="@id/review_card_rating"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/review_card_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textSize="16dp"
                android:layout_below="@id/review_card_title"
                android:ellipsize="end"
                android:maxLines="3"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>